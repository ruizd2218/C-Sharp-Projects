@using CarInsurance.ViewModels;
@model List<InsuranceVM>

<div class="row row-no-gutters m-3">
    <div class="col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="m-0">
            Car Insurance
        </div>
        <div class="card-body">
            @foreach (var ins in Model)
            {
            <div class="row mb-3">
                <div class="col-2">
                    @ins.FirstName
                </div>
                <div class="col-2">
                    @ins.LastName
                </div>
                <div class="col-2">
                    @ins.EmailAddress
                </div>
                <div class="col-2">
                    @ins.Quote
                </div>
            </div>
            }
        </div>
    </div>
</div>